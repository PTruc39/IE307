<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MangaApp.Views.FavoritePage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="lstdslh" ItemSelected="lstdslh_ItemSelected"
                       IsPullToRefreshEnabled="True"
                       Refreshing="lsthotel_Refreshing"
                      RefreshControlColor="HotPink">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding MangaName}" Detail="{Binding Description} ">
                        </TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="test" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>