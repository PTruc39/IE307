                                <CollectionView x:Name="lstdslh" Margin="15" SelectionMode="Single">
                                    <CollectionView.EmptyView>
                                        <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="Loading Data"/>
